{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "declaration": false,
      "jsx": "react",
      "module": "amd",
      "moduleResolution": "node",
      "outDir": "./dist/",
      "rootDir": ".",
      "sourceMap": true,
      "target": "es6",
      "baseUrl": ".",
      "paths": {
      "@app": ["src"],
      "@app/*": ["src/*"]
      },
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
